@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  .year
    font-family 'Oswald', sans-serif
    font-weight 700
    font-size 1.4em
    text-align center
    width 90px
    height 70px
    float left
    position relative
    .title
      position absolute
      top 0px
      left 0px
      width 100%
      text-align center
      color #3
      transition color 0.2s
    .container
      position absolute
      left 50%
      top 25px
      transform translate(-50%, 0)
      .friday
        float left
        width 10px
        height 10px
        background ColorHeading
        transition background 0.2s
        border-radius 2px
        margin-left 5px
        &:first-child
          margin-left 0px
    &:hover
      cursor help
      .title
        color black
      .friday
         background ColorHeadingLink




